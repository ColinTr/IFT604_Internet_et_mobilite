<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#00000001"
                android:centerColor="#000B131E"
                android:centerY="1.0"
                android:endColor="#000D1522"
                android:angle="270"
                />
            <corners android:topRightRadius="2dp"
                android:bottomRightRadius="2dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:topRightRadius="2dp"
                    android:bottomRightRadius="2dp"/>
                <gradient
                    android:startColor="#BA6E6E"
                    android:centerColor="#BA6E6E"
                    android:centerY="1.0"
                    android:endColor="#BA6E6E"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>